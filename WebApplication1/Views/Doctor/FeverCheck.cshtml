@{
    ViewData["Title"] = "FeverCheck";
}
<link rel="stylesheet" href="~/css/Index.css" type="text/css" />

<div class="container">
    <h1>Fever Check</h1>

    @if (ViewBag.Message != null)
    {
        <p>@ViewBag.Message</p>
    }

    <form asp-controller="Doctor" asp-action="FeverCheck" method="post">

         @*<p>Please select Temperature Unit first:</p>*@
        <p>@Html.Label("Please select Temperature Unit first:")</p>
        Celcius:@Html.RadioButton("TempUnit", "Celcius")<br />
        Fahrenheit:@Html.RadioButton("TempUnit", "Fahrenheit")<br />
        <br />

        @Html.Label("Enter Temperature")

        <input type="number" step="1" min="20" max="110" name="temp">
        <br>
        <p></p>
        <input type="submit" value="check" />


    </form>
</div>

